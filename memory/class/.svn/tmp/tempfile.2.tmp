	{
		$pdo = PDO_Manager::getMemoryDB();

		$query = 'INSERT INTO memory_piece
				  (category_sq, category_misc_nm, mp_nm, creator_id, creator_nick, content, 
				   start_year, start_month, start_day, end_year, end_month, end_day, 
