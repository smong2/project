	public static function instance($mpSq) /*{{{*/
	{
		static $sInstance = array();

		$mpSq = intval($mpSq);

		if (isset($sInstance[$mpSq]) === false) {
			$className        = __CLASS__;
			$mp               = new $className($mpSq);
			$sInstance[$mpSq] = $mp;
		}

		return $sInstance[$mpSq];
	} /*}}}*/

